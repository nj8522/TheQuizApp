<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Nash.thequizapp.Fragments.GameFragment">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginEnd="26dp"
    android:layout_marginTop="18dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:padding="2dp"
        android:text="Quiz"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/game_close_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/textView2"
        android:layout_marginRight="20dp"
        android:background="@drawable/game_close_img" />


</RelativeLayout>

    <TextView
        android:id="@+id/game_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thie is where the questions all will come for the user to answer"
        android:textAlignment="center"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="38dp"
        android:padding="4dp"
        android:textSize="28sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/game_time"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:text="10"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <Button
        android:id="@+id/game_option_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option A"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/game_option_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option B"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/game_option_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option C"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:background="@color/colorAccent"/>



        <Button
            android:id="@+id/game_next_btn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="end"
            android:layout_marginTop="26dp"
            android:background="@drawable/game_next_img"
            android:layout_marginEnd="54dp"/>
        <Button
            android:id="@+id/game_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_dark"
            android:layout_gravity="center"
            android:text="Go to results"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:padding="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="52dp"/>






</LinearLayout>
